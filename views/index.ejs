<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <!--<link rel='stylesheet' href='/stylesheets/style.css' />-->
    <link rel='stylesheet' href='/stylesheets/landing-page.min.css' />

    <!-- Custom fonts for this template -->
    <link href="/stylesheets/vendor/fontawesome-free/css/all.css" rel="stylesheet">
    <link href="/stylesheets/vendor/simple-line-icons/css/simple-line-icons.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700,300italic,400italic,700italic" rel="stylesheet" type="text/css">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">

    <link rel='stylesheet' href='/stylesheets/style.css' />

    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/js/bootstrap.min.js" integrity="sha384-B0UglyR+jN6CkvvICOB2joaf5I4l3gm9GU6Hc1og6Ls7i6U/mkkaduKaBhlAXv9k" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.6/umd/popper.min.js" integrity="sha384-wHAiFfRlMFy6i5SRaxvfOCifBUQy1xHdJ/yoi7FRNXMRBu5WHdZYu1hA6ZOblgut" crossorigin="anonymous"></script>


</head>
<header>
    <% include ./partials/header %>
</header>
<body>
<div class="align-content-md-start">
<p><%= dateInStr %></p>
</div>

<h1><%= title %></h1>
<!-- Masthead -->
<header class="masthead text-white text-center">
    <div class="overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-xl-9 mx-auto">
                <h1 class="mb-5">Looking for Food Nearby?</h1>
            </div>
            <div class="col-md-10 col-lg-8 col-xl-7 mx-auto">
                <form action="/search/restaurants" method="post">
                    <div class="form-row">
                        <div>
                        <!--<div class="col-12 col-md-9 mb-2 mb-md-0">-->
                            <!--<input list="restaurants"  name="rname" size="55">-->
                            <select id="restaurants" name="rname">
                                <option value=""> Any Restaurant </option>
                                <% for (let i = 0; i < data2.length; i++) { %>
                                    <option value="<%=data2[i].rname%>"><%= data2[i].rname %></option>
                                <% } %>
                            </select>
                        </div>
                        <div>
                        <!--<div class="col-12 col-md-9 mb-2 mb-md-0">-->
                            <!--<input list="locations" name="location" placeholder="Any Location" size="55">-->
                            <select id="locations" name="location">
                                <option value=""> Any Location </option>
                                <% for (let i = 0; i < data.length; i++) { %>
                                <option value="<%= data[i].locname %>"><%= data[i].locname %> </option>
                                <% } %>
                            </select>
                        </div>
                        <div>
                        <!--<div class="col-12 col-md-9 mb-2 mb-md-0">-->
                            <!--<input list="cuisines" name="cuisineType" placeholder="Any Cuisine" size="55">-->
                            <select id="cuisines" name="cuisineType">
                                <option value=""> Any Cuisine </option>
                                <% for (let i = 0; i < data1.length; i++) { %>
                                <option value="<%= data1[i].cuisinename%>"><%= data1[i].cuisinename %> </option>
                                <% } %>
                            </select>
                            <!-- <input type="cuisineType" class="form-control form-control-lg" placeholder="Any Cuisine" name="cuisineType"> -->
                        </div>
                        <div>
                        <!--<div class="col-12 col-md-9 mb-2 mb-md-0">-->
                            <!--<input list="paxNo" name="paxNo" placeholder="No. of Diners" size="55">-->
                            <select id="paxNo" name="paxNo">
                                <% for (let i = 1; i <= 15; i++) { %>
                                    <%  if(i === 2) { %>
                                        <option value="<%=i%>" selected ><%= i %></option>
                                    <% } else { %>
                                        <option value="<%=i%>" ><%= i %></option>
                                    <% } %>
                                <% } %>
                            </select>
                            <!--<input type="paxNo" class="form-control form-control-lg" placeholder="Any Pax" name="paxNo">-->
                        </div>
                        <div>

                            <select id="time" name="reservationTime">
                                <% for (let i = 0; i < data3.length; i++) { %>
                                    <% if(data3[i].timeslot >= time && i - 1 >= 0 && data3[i-1].timeslot < time) { %>
                                        <option value="<%= data3[i].timeslot%>" selected ><%= data3[i].timeslotstr %></option>
                                    <% } else { %>
                                        <option value="<%= data3[i].timeslot%>"><%= data3[i].timeslotstr %></option>
                                    <% } %>
                                <% } %>
                            </select>
                        </div>
                        <!--<div class="col-12 col-md-9 mb-2 mb-md-0">-->
                            <!--<input type="time" min="08:00" max="22:00" step="900" class="form-control form-control-lg" name="reservationTime" required>-->
                        <!--</div>-->
                        <div class="col-12 col-md-9 mb-2 mb-md-0">
                            <input type="date"  value="<%=date%>" min="<%=date%>" class="form-control form-control-lg" name="reservationDate" required>
                        </div>
                        <div class="col-12 col-md-3">
                            <button type="submit" class="btn btn-block btn-lg btn-primary">Search!</button>
                        </div>
                        <div class="col-12 col-md-3">
                            <button type="reset" class="btn btn-block btn-primary">Reset Choices</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</header>


</body>
<footer>
    <%- include ./partials/footer.ejs %>
</footer>
</html>
